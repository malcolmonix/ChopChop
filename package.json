{
  "name": "chopchop",
  "version": "1.0.0",
  "description": "Fast food delivery app for customers - Order from your favorite restaurants with ChopChop",
  "private": true,
  "keywords": [
    "food delivery",
    "restaurant ordering",
    "nextjs",
    "typescript",
    "food app",
    "customer app"
  ],
  "author": {
    "name": "ChopChop Team",
    "email": "support@chopchop.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/malcolmonix/ChopChop.git"
  },
  "homepage": "https://chopchop.com",
  "bugs": {
    "url": "https://github.com/malcolmonix/ChopChop/issues",
    "email": "support@chopchop.com"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix --quiet",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit --skipLibCheck",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:ci": "jest --ci --coverage --watchAll=false --passWithNoTests",
    "test:e2e": "playwright test --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "docker:build": "docker build -t chopchop:latest .",
    "docker:run": "docker run -p 3000:3000 chopchop:latest",
    "docker:dev": "docker build -t chopchop:dev . && docker run -p 3000:3000 chopchop:dev"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "autoprefixer": "^10.4.21",
    "firebase": "^12.4.0",
    "graphql": "^16.11.0",
    "next": "^14.0.0",
    "postcss": "^8.5.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.0",
    "@stripe/stripe-js": "^4.0.0",
    "@stripe/react-stripe-js": "^2.0.0",
    "react-query": "^3.39.0",
    "react-hook-form": "^7.0.0",
    "react-router-dom": "^6.0.0",
    "lucide-react": "^0.400.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.3%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
